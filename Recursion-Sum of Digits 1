#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int sumOfDigits(int n) {
    if (n == 0)
        return 0;
    return (n % 10) + sumOfDigits(n / 10);
}

int main() {
    int n;
    scanf("%d", &n);

    if (n < 1000) {
        int result = sumOfDigits(n);
        printf("Sum of Digit:%04d\n", result);
    } else {
        printf("Enter a Valid Input!!!!!!!\n");
    }

    return 0;
}

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    

