#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    char name[50];
    int m1, m2, m3, m4, m5;
    scanf("%s", name);
    scanf("%d%d%d%d%d", &m1, &m2, &m3, &m4, &m5);
    int total = m1 + m2 + m3 + m4 + m5;
    float average = total / 5.0;
    printf("Name of the Student:%s\n", name);
    printf("Total marks:%d\n", total);
    printf("Average marks:%.1f", average);
    return 0;
}
