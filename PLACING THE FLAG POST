#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int main() {
    int x, y, length;
    scanf("%d%d%d", &x, &y, &length);
    int center_x = x + length / 2;
    int center_y = y + length / 2;
    printf("x-coordinate:%d\n", x);
    printf("y-coordinate:%d\n", y);
    printf("Length:%d\n", length);
    printf("Centre of the ground is at (%d,%d)", center_x, center_y);
    return 0;
}
