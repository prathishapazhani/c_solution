#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>



int main() {
    int n, i, sum = 0;
    scanf("%d", &n);
    if(n < 0) {
        printf("Invalid Input\n");
    } else {
        for(i = 1; i < n; i++) {
            if(n % i == 0) {
                sum += i;
            }
        }
        if(sum == n) {
            printf("The Number %.1f is a Perfect Number.\n", (float)n);
        } else {
            printf("The Number %.1f is a Not Perfect Number.\n", (float)n);
        }
    }
    return 0;
}


    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
 
